process.executor = 'local'

params {
    // Define any parameters for your workflow here
    input_file = 'data/input.txt'
    output_dir = 'results'
}

work {
    // Define where to store intermediate files
    dir = 'work'
}

process {
    // Define default process settings
    cpus = 1
    memory = '2 GB'
    time = '1h'
}

tower {
    enabled = false
}

profiles {
    standard {
        process {
            executor = 'local'
        }
    }
    cluster {
        process {
            executor = 'slurm'
            queue = 'short'
        }
    }
}