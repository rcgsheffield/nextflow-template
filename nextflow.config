process.executor = 'local'

params {
    // Define parameters for the workflow
    input_file = 'data/input.txt'
    output_dir = 'results'
}

work {
    // Define where to store intermediate files
    dir = 'work'
}

process {
    // Define default process settings
    cpus = 1
    memory = '2 GB'
    time = '1h'
}

docker {
    // Define Docker settings if using Docker
    enabled = true
    image = 'nfcore/base:latest'
}

includeConfig 'conf/base.config'
